/**
 * Manage Privacy Policy
 */
(function () {

  if (typeof window.nhst === "undefined") {
    window.nhst = {};
  }

  window.nhst.handleLoginInfo = function () {
    var vpwIdCookieValue = readCookie('VPW_ID');
    var loginInfo = extractLoginInfo(readCookie('DN_LoginInfo'));
    var isLoggedIn = (vpwIdCookieValue != null && loginInfo != null);
  };

  /**
   * Refresh the user by POSTing to /login/refreshUser.
   *
   * After refreshing, redraw menu items.
   *
   * Example usage:
   *
   * nhst.refreshUser()
   *   .done(function() { ... })
   *   .fail(function() { ... })
   *   .always(function() { ... })
   */
  window.nhst.refreshUser = function () {
    var vpwIdCookieValue = readCookie('VPW_ID');

    var xhr = $.post('/auth/refreshUser?vpwId=' + (vpwIdCookieValue != null ? vpwIdCookieValue : ""));
    xhr.done();

    return xhr;
  };


  function isNotToday(lastRefreshedTime) {
    return new Date(parseInt(lastRefreshedTime)).getDate() !== new Date().getDate();
  }

  var NHST_STATE_COOKIE_REFRESHED_KEY = 'dn-stat-cookie-refreshed';

  function dailyRefreshCookie() {
    var vpwIdCookieValue = readCookie('VPW_ID');
    if (vpwIdCookieValue !== null) {
      var lastRefreshedTime = window.localStorage.getItem(NHST_STATE_COOKIE_REFRESHED_KEY);
      if (lastRefreshedTime === null || typeof lastRefreshedTime === 'undefined' || isNotToday(lastRefreshedTime)) {
        window.nhst.refreshUser().done(function () {
          window.localStorage.setItem(NHST_STATE_COOKIE_REFRESHED_KEY, Date.now());
          if (typeof window.nhst.populateDataLayer === 'function') {
            window.nhst.populateDataLayer();
          }
        });
      }
    }
  }

  dailyRefreshCookie();


  /**
   * Extract the data from a DN_LoginInfo cookie.
   */
  function extractLoginInfo(cookieValue) {
    if (cookieValue != null) {
      // Decode base64 cookie.
      var decodedCookieValue = decodeURIComponent(escape(window.atob(cookieValue)));

      var loginInfo = /^(.+)\|(.*)\|(.*)\|(.*)\,/.exec(decodedCookieValue);

      if (loginInfo != null && loginInfo.length > 1) {
        return {
          username: loginInfo[1],
          firstName: loginInfo[2],
          lastName: loginInfo[3],
          hasPlusAccess: loginInfo[4] == "true",
          firstNameWithFallback: function () {
            if (this.firstName != "") {
              return this.firstName;
            } else {
              return this.username;
            }
          },
          fullNameWithFallback: function () {
            if (this.firstName != "") {
              return this.firstName + " " + this.lastName;
            } else {
              return this.username;
            }
          },
        };
      }
    }
  }
  function readCookie(name) {
    var nameEQ = name + "=";
    var ca = document.cookie.split(';');
    for (var i = 0; i < ca.length; i++) {
      var c = ca[i];
      while (c.charAt(0) == ' ')
        c = c.substring(1, c.length);
      if (c.indexOf(nameEQ) == 0)
        return c.substring(nameEQ.length, c.length);
    }
    return null;
  }

  function setCookie(cname, cvalue, exdays) {
    var d = new Date();
    d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
    var expires = "expires=" + d.toUTCString();
    document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
  }

  window.nhst.handleLoginInfo();

})();
